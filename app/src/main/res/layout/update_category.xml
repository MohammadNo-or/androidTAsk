<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.updatecategory.updateCategory">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgUpCat"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:src="@drawable/camera" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="#00F02424"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNameCatEn"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="enter the category english"
                    android:textColorLink="@color/color_red" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00F02424"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNameCatAr"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="enter the category arabic"
                    android:textColorLink="#00E21A1A" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#00F02424"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNews"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_cat_new" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/btnUpCat"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#FF6D00"
                android:text="@string/UPDATE_CATEGORY"
                android:textSize="24sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>