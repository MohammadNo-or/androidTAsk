<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="189dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="6dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/imgCardd"
                android:layout_width="145dp"
                android:layout_height="171dp"

                android:paddingTop="5dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="239dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceCard"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_below="@+id/name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="One Cuisine Type"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edMinCard"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#CDDBA2"
                        android:text="-"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edCountCard"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/edSumCard"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="#CDDBA2"
                        android:text="+"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/goCard"
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/design_default_color_error"
                        app:srcCompat="@android:drawable/ic_menu_delete"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="225dp"
                    android:layout_height="26dp">

                    <TextView
                        android:id="@+id/ratingTextViewCard"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="2dp"
                        android:text="Rating"
                        android:textColor="@color/colorAccent" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btnDetailsCard"
                    android:layout_width="221dp"
                    android:layout_height="49dp"
                    android:background="@android:color/holo_orange_light"
                    android:text="DETAILS"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>